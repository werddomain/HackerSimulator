{
  "version": "0.2.0",
  "configurations": [
    {      "name": "Debug HackerGame (Chrome)",
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      "url": "http://localhost:9000",      
      "webRoot": "${workspaceFolder}/dist",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
    
      "preLaunchTask": "npm: dev",
      "trace": true,
      "presentation": {
        "hidden": false,
        "group": "main",
        "order": 1
      }
    },
     {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to chrome",
      "port": 9222,
      "urlFilter": "http://localhost:8080/*",
      "address": "localhost",
      "timeout": 1000,
      "webRoot": "${workspaceFolder}/dist",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
      }
    },
    {
      "type":"chrome",
      "request":"launch",
      "name":"Launch Chrome against localhost",
      "url":"http://localhost:8080",
      "webRoot":"${workspaceFolder}/dist",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm run dev",
      "trace": true,
    }
  ]
}
