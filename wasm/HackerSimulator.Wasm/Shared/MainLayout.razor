@inherits LayoutComponentBase
@inject AutoRunService AutoRun

<div class="container">
    <NavMenu />
    <main>
        @Body
    </main>
</div>
<Taskbar />

<style>
.container {
    display: flex;
    min-height: 100vh;
    padding-bottom: 40px; /* space for taskbar */
}
main {
    flex: 1;
    padding: 1rem;
}
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AutoRun.StartAsync();
        }
    }
}
