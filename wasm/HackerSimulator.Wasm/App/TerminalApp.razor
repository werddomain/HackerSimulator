@namespace HackerSimulator.Wasm.Apps
@inherits HackerSimulator.Wasm.Windows.WindowBase
@inject HackerSimulator.Wasm.Core.ShellService Shell

<div class="terminal-wrapper" @onclick="FocusInput">
    <pre class="terminal-output">@_display</pre>
    <div class="terminal-input">
        <span class="prompt">@Prompt</span>
        <input @ref="_inputRef" @bind="_input" @bind:event="oninput" @onkeydown="HandleInputKey" class="input-field" />
    </div>
</div>
