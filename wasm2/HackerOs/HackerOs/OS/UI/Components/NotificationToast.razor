                    <div class="notification-toast-title">@notification.Title</div>
                </div>
                <div class="notification-toast-body">@notification.Content</div>
                <div class="notification-toast-source">@notification.Source</div>
                
                @if (notification.Actions.Any())
                {
                    <div class="notification-toast-actions">
                        @foreach (var action in notification.Actions)
                        {
                            <button class="notification-action-button @(action.IsPrimary ? "primary" : "")" 
                                    @onclick="e => OnToastActionClick(e, notification, action)">
                                @if (!string.IsNullOrEmpty(action.IconPath))
                                {
                                    <img src="@action.IconPath" alt="" />
                                }
                                @action.Label
                            </button>
                        }
                    </div>
                }
            </div>
            
            <div class="notification-toast-dismiss" @onclick="() => DismissToast(notification.Id)" title="Dismiss">
