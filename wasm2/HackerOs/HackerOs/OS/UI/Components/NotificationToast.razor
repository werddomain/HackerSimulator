@code {
    [Inject] protected NotificationService NotificationService { get; set; } = null!;
    [Inject] protected ILogger<NotificationToast> Logger { get; set; } = null!;
    
    /// <summary>
    /// Maximum number of toast notifications to show at once
    /// </summary>
    [Parameter] public int MaxVisibleToasts { get; set; } = 3;
    
    /// <summary>
    /// Auto-hide duration in milliseconds
    /// </summary>
    [Parameter] public int AutoHideDuration { get; set; } = 5000;
    
    /// <summary>
    /// Event called when a toast notification is clicked
    /// </summary>
    [Parameter] public EventCallback<NotificationModel> OnToastClicked { get; set; }
    
    /// <summary>
    /// List of toast notifications
    /// </summary>
    private List<NotificationModel> _toastNotifications = new();
    
    /// <summary>
    /// Dictionary to track toast timers
    /// </summary>
    private Dictionary<string, Timer> _toastTimers = new();
    
    /// <summary>
    /// Initialize the component
    /// </summary>
    protected override void OnInitialized()
    {
        // Subscribe to notification events
        NotificationService.NotificationAdded += OnNotificationAdded;
        NotificationService.NotificationRemoved += OnNotificationRemoved;
        
        base.OnInitialized();
    }
    
    /// <summary>
    /// Dispose resources
    /// </summary>
    public void Dispose()
    {
        // Unsubscribe from events
        NotificationService.NotificationAdded -= OnNotificationAdded;
        NotificationService.NotificationRemoved -= OnNotificationRemoved;
        
        // Dispose all timers
        foreach (var timer in _toastTimers.Values)
        {
            timer.Dispose();
        }
    }
    
    /// <summary>
    /// Handle notification added event
    /// </summary>
    private void OnNotificationAdded(object? sender, NotificationEventArgs e)
    {
        // Only show toast for new notifications
        if (e.Notification != null && !e.Notification.IsRead)
        {
            // Add to toast list, limiting to max visible
            _toastNotifications.Insert(0, e.Notification);
            if (_toastNotifications.Count > MaxVisibleToasts)
            {
                var oldNotification = _toastNotifications[_toastNotifications.Count - 1];
                _toastNotifications.RemoveAt(_toastNotifications.Count - 1);
                
                // Remove timer for old notification
                if (_toastTimers.ContainsKey(oldNotification.Id))
                {
                    _toastTimers[oldNotification.Id].Dispose();
                    _toastTimers.Remove(oldNotification.Id);
                }
            }
            
            // Create auto-hide timer
            var timer = new Timer(AutoHideDuration);
            timer.Elapsed += (s, args) => DismissToastWithTimer(e.Notification.Id);
            timer.AutoReset = false;
            timer.Start();
            
            // Store timer reference
            _toastTimers[e.Notification.Id] = timer;
            
            InvokeAsync(StateHasChanged);
        }
    }
    
    /// <summary>
    /// Handle notification removed event
    /// </summary>
    private void OnNotificationRemoved(object? sender, NotificationEventArgs e)
    {
        // Remove from toast list
        if (e.Notification != null)
        {
            _toastNotifications.RemoveAll(n => n.Id == e.Notification.Id);
            
            // Remove timer if exists
            if (_toastTimers.ContainsKey(e.Notification.Id))
            {
                _toastTimers[e.Notification.Id].Dispose();
                _toastTimers.Remove(e.Notification.Id);
            }
            
            InvokeAsync(StateHasChanged);
        }
    }
    
    /// <summary>
    /// Dismiss a toast notification
    /// </summary>
    protected async Task DismissToast(string id)
    {
        // Remove toast
        var notification = _toastNotifications.FirstOrDefault(n => n.Id == id);
        if (notification != null)
        {
            _toastNotifications.Remove(notification);
            
            // Remove timer if exists
            if (_toastTimers.ContainsKey(id))
            {
                _toastTimers[id].Dispose();
                _toastTimers.Remove(id);
            }
            
            // Mark notification as read
            await NotificationService.MarkNotificationAsReadAsync(id);
            
            StateHasChanged();
        }
    }
    
    /// <summary>
    /// Dismiss a toast with timer (called from timer thread)
    /// </summary>
    private void DismissToastWithTimer(string id)
    {
        InvokeAsync(() => DismissToast(id));
    }
    
    /// <summary>
    /// Handle toast click
    /// </summary>
    protected async Task OnToastClick(NotificationModel notification)
    {
        // Mark as read
        await NotificationService.MarkNotificationAsReadAsync(notification.Id);
        
        // Remove from toast
        _toastNotifications.Remove(notification);
        
        // Remove timer if exists
        if (_toastTimers.ContainsKey(notification.Id))
        {
            _toastTimers[notification.Id].Dispose();
            _toastTimers.Remove(notification.Id);
        }
        
        // Call event
        await OnToastClicked.InvokeAsync(notification);
        
        StateHasChanged();
    }
    
    /// <summary>
    /// Handle action button click
    /// </summary>
    protected async Task OnToastActionClick(MouseEventArgs e, NotificationModel notification, NotificationAction action)
    {
        e.StopPropagation();
        
        // Mark as read
        await NotificationService.MarkNotificationAsReadAsync(notification.Id);
        
        // Trigger the action event
        NotificationService.TriggerActionEvent(notification, action);
        
        // Remove from toast if action dismisses notification
        if (action.DismissesNotification)
        {
            _toastNotifications.Remove(notification);
            
            // Remove timer if exists
            if (_toastTimers.ContainsKey(notification.Id))
            {
                _toastTimers[notification.Id].Dispose();
                _toastTimers.Remove(notification.Id);
            }
        }
        
        StateHasChanged();
    }
}
