@code {
    [Inject] protected IApplicationManager ApplicationManager { get; set; } = null!;
    [Inject] protected IStartMenuIntegration StartMenuIntegration { get; set; } = null!;
    [Inject] protected Microsoft.Extensions.Logging.ILogger<StartMenu> Logger { get; set; } = null!;
    
    /// <summary>
    /// The current user session
    /// </summary>
    [Parameter] public UserSession? UserSession { get; set; }
    
    /// <summary>
    /// Whether the start menu is open
    /// </summary>
    [Parameter] public bool IsOpen { get; set; }
    
    /// <summary>
    /// Event fired when the start menu is opened or closed
    /// </summary>
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    
    /// <summary>
    /// Event fired when an application is launched
    /// </summary>
    [Parameter] public EventCallback<string> OnApplicationLaunched { get; set; }
    
    /// <summary>
    /// Event fired when the sign out button is clicked
    /// </summary>
    [Parameter] public EventCallback OnSignOut { get; set; }
    
    /// <summary>
    /// Event fired when the settings button is clicked
    /// </summary>
    [Parameter] public EventCallback OnSettingsClicked { get; set; }
    
    /// <summary>
    /// Event fired when the shutdown button is clicked
    /// </summary>
    [Parameter] public EventCallback OnShutdown { get; set; }
    
    /// <summary>
    /// Event fired when the restart button is clicked
    /// </summary>
    [Parameter] public EventCallback OnRestart { get; set; }
    
    /// <summary>
    /// Event fired when the lock button is clicked
    /// </summary>
    [Parameter] public EventCallback OnLock { get; set; }
    
    /// <summary>
    /// Search query
    /// </summary>
    private string SearchQuery { get; set; } = string.Empty;
    
    /// <summary>
    /// Whether to show all apps
    /// </summary>
    private bool ShowAllApps { get; set; } = false;
    
    /// <summary>
    /// User display name
    /// </summary>
    private string UserDisplayName => UserSession?.User?.FullName ?? "Guest";
    
    /// <summary>
    /// User avatar URL
    /// </summary>
    private string UserAvatarUrl => "/images/avatar.png";
    
    /// <summary>
    /// Pinned applications
    /// </summary>
    private List<StartMenuItem> PinnedApps { get; set; } = new();
    
    /// <summary>
    /// Recent applications
    /// </summary>
    private List<StartMenuItem> RecentApps { get; set; } = new();
    
    /// <summary>
    /// All applications grouped by category
    /// </summary>
    private Dictionary<string, List<StartMenuItem>> AppCategories { get; set; } = new();
    
    /// <summary>
    /// Search results
    /// </summary>
    private List<StartMenuItem> SearchResults { get; set; } = new();
    
    /// <summary>
    /// Initialize the component
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadApplicationsAsync();
    }
    
    /// <summary>
    /// When parameters change
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        
        // Reload applications when user session changes
        if (UserSession != null)
        {
            await LoadApplicationsAsync();
        }
    }
    
    /// <summary>
    /// Dispose the component
    /// </summary>
    public void Dispose()
    {
        // Cleanup any resources if needed
    }
    
    /// <summary>
    /// Load applications from the start menu integration
    /// </summary>
    private async Task LoadApplicationsAsync()
    {
        try
        {
            if (UserSession == null)
            {
                // If no user session, show empty data
                PinnedApps = new List<StartMenuItem>();
                RecentApps = new List<StartMenuItem>();
                AppCategories = new Dictionary<string, List<StartMenuItem>>();
                return;
            }
            
            // Get all start menu applications
            var startMenuApps = await StartMenuIntegration.GetStartMenuApplicationsAsync(UserSession);
            
            // Set the pinned apps
            PinnedApps = startMenuApps.PinnedApplications;
            
            // Set the recent apps
            RecentApps = startMenuApps.RecentApplications;
            
            // Set the categories
            AppCategories = startMenuApps.Categories;
            
            // Clear search results
            SearchResults = new List<StartMenuItem>();
            
            // Clear search query
            SearchQuery = string.Empty;
            
            // Log success
            Logger.LogInformation("Loaded {PinnedCount} pinned apps, {RecentCount} recent apps, and {CategoryCount} categories",
                PinnedApps.Count, RecentApps.Count, AppCategories.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading applications");
        }
    }
    
    /// <summary>
    /// Launch an application
    /// </summary>
    /// <param name="applicationId">Application ID</param>
    private async Task LaunchApplication(string applicationId)
    {
        try
        {
            Logger.LogInformation("Launching application: {AppId}", applicationId);
            
            // Get the application
            var app = ApplicationManager.GetApplication(applicationId);
            if (app != null)
            {
                // Launch the application
                await ApplicationManager.LaunchAsync(applicationId);
                
                // Close the start menu
                await CloseStartMenu();
                
                // Raise event
                await OnApplicationLaunched.InvokeAsync(applicationId);
            }
            else
            {
                Logger.LogWarning("Application not found: {AppId}", applicationId);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error launching application: {AppId}", applicationId);
        }
    }
    
    /// <summary>
    /// Pin an application to the start menu
    /// </summary>
    /// <param name="applicationId">Application ID</param>
    private async Task PinApplication(string applicationId)
    {
        try
        {
            if (UserSession == null)
            {
                Logger.LogWarning("Cannot pin application without user session");
                return;
            }
            
            Logger.LogInformation("Pinning application: {AppId}", applicationId);
            
            // Pin the application
            bool success = await StartMenuIntegration.PinApplicationAsync(applicationId, UserSession);
            if (success)
            {
                // Reload applications
                await LoadApplicationsAsync();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error pinning application: {AppId}", applicationId);
        }
    }
    
