    /// <summary>
    /// Execute search
    /// </summary>
    private async Task ExecuteSearch()
    {
        try
        {
            if (UserSession == null || string.IsNullOrWhiteSpace(SearchQuery))
            {
                SearchResults = new List<StartMenuItem>();
                return;
            }
            
            Logger.LogInformation("Searching for: {Query}", SearchQuery);
            
            // Search for applications
            var results = await StartMenuIntegration.SearchStartMenuAsync(SearchQuery, UserSession);
            
            // Set search results
            SearchResults = results.ToList();
            
            Logger.LogInformation("Found {Count} search results", SearchResults.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error executing search");
        }
    }
    
    /// <summary>
    /// Handle search key down event
    /// </summary>
    /// <param name="e">Keyboard event arguments</param>
    private async Task OnSearchKeyDown(Microsoft.AspNetCore.Components.Web.KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await ExecuteSearch();
        }
        else if (e.Key == "Escape")
        {
            SearchQuery = string.Empty;
            SearchResults = new List<StartMenuItem>();
        }
    }
    
