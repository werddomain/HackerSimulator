                </div>
            </div>
        </div>
        <div class="search-container">
            <input type="text" class="start-menu-search" placeholder="Type to search..."
                   @bind="SearchQuery" @bind:event="oninput" @onkeydown="OnSearchKeyDown" />
            <button class="search-button" @onclick="ExecuteSearch">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    </div>
    
    <div class="start-menu-content">
        @if (!string.IsNullOrWhiteSpace(SearchQuery))
        {
            <div class="start-menu-section search-results">
                <h3 class="section-title">Search Results</h3>
                
                @if (SearchResults.Any())
                {
                    <div class="app-grid">
                        @foreach (var app in SearchResults)
                        {
                            <div class="app-item" @onclick="() => LaunchApplication(app.Id)">
                                <div class="app-icon">
                                    @if (!string.IsNullOrEmpty(app.IconPath))
                                    {
                                        <img src="@app.IconPath" alt="@app.Name" />
                                    }
                                    else
                                    {
                                        <div class="default-icon">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                                                <path d="M12 8V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                                <path d="M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                            </svg>
                                        </div>
                                    }
                                </div>
                                <div class="app-name">@app.Name</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <div class="empty-message">No results found for "@SearchQuery"</div>
                    </div>
                }
            </div>
        }
        else
        {
            @if (PinnedApps.Any())
            {
                <div class="start-menu-section pinned-apps">
                    <h3 class="section-title">Pinned</h3>
                    <div class="app-grid">
                        @foreach (var app in PinnedApps)
                        {
                            <div class="app-item" @onclick="() => LaunchApplication(app.Id)">
                                <div class="app-icon">
                                    @if (!string.IsNullOrEmpty(app.IconPath))
                                    {
                                        <img src="@app.IconPath" alt="@app.Name" />
                                    }
                                    else
                                    {
                                        <div class="default-icon">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                                                <path d="M12 8V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                                <path d="M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                            </svg>
                                        </div>
                                    }
                                </div>
                                <div class="app-name">@app.Name</div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            @if (RecentApps.Any())
            {
                <div class="start-menu-section recent-apps">
                    <h3 class="section-title">Recent</h3>
                    <div class="app-grid">
                        @foreach (var app in RecentApps)
                        {
                            <div class="app-item" @onclick="() => LaunchApplication(app.Id)">
                                <div class="app-icon">
                                    @if (!string.IsNullOrEmpty(app.IconPath))
                                    {
                                        <img src="@app.IconPath" alt="@app.Name" />
                                    }
                                    else
                                    {
                                        <div class="default-icon">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                                                <path d="M12 8V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                                <path d="M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                            </svg>
                                        </div>
                                    }
                                </div>
                                <div class="app-name">@app.Name</div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            <div class="start-menu-section all-apps">
                <div class="section-header">
                    <h3 class="section-title">All Apps</h3>
                    <button class="toggle-all-button" @onclick="ToggleAllApps">
                        @(ShowAllApps ? "Hide" : "Show All")
                    </button>
                </div>
                
                @if (ShowAllApps)
                {
                    <div class="category-container">
                        @foreach (var category in AppCategories)
                        {
                            <div class="category-section">
                                <h4 class="category-title">@category.Key</h4>
                                <div class="app-list">
                                    @foreach (var app in category.Value)
                                    {
                                        <div class="app-list-item" @onclick="() => LaunchApplication(app.Id)">
                                            <div class="app-icon">
                                                @if (!string.IsNullOrEmpty(app.IconPath))
                                                {
                                                    <img src="@app.IconPath" alt="@app.Name" />
                                                }
                                                else
                                                {
                                                    <div class="default-icon">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                                                        </svg>
                                                    </div>
                                                }
                                            </div>
                                            <div class="app-name">@app.Name</div>
                                            <div class="app-actions">
                                                @if (app.IsPinned)
                                                {
                                                    <button class="pin-button pinned" title="Unpin from Start" @onclick:stopPropagation="true" @onclick="() => UnpinApplication(app.Id)">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M12 19V5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                            <path d="M5 12L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                        </svg>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="pin-button" title="Pin to Start" @onclick:stopPropagation="true" @onclick="() => PinApplication(app.Id)">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M12 19V5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                            <path d="M5 12L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                        </svg>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
        
        <div class="system-shortcuts">
            <button class="shortcut-button" @onclick="OnShutdownClick">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18.36 6.64C19.6184 7.89879 20.4753 9.50244 20.8223 11.2482C21.1693 12.9939 20.9909 14.8034 20.3096 16.4478C19.6284 18.0921 18.4748 19.4976 16.9948 20.4864C15.5148 21.4752 13.7749 22.0029 11.995 22.0029C10.2151 22.0029 8.47515 21.4752 6.99517 20.4864C5.51519 19.4976 4.36164 18.0921 3.68036 16.4478C2.99909 14.8034 2.82069 12.9939 3.16772 11.2482C3.51475 9.50244 4.37162 7.89879 5.63 6.64" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 2V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Shut down
            </button>
            <button class="shortcut-button" @onclick="OnRestartClick">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M23 4V10H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M1 20V14H7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M3.51 9.00008C4.01717 7.56686 4.87913 6.28542 6.01547 5.27549C7.1518 4.26556 8.52547 3.55979 10.0083 3.22427C11.4911 2.88874 13.0348 2.93436 14.4952 3.35677C15.9556 3.77918 17.2853 4.56473 18.36 5.64008L23 10.0001M1 14.0001L5.64 18.3601C6.71475 19.4355 8.04437 20.221 9.50481 20.6434C10.9652 21.0659 12.5089 21.1115 13.9917 20.7759C15.4745 20.4404 16.8482 19.7346 17.9845 18.7247C19.1209 17.7148 19.9828 16.4333 20.49 15.0001" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Restart
