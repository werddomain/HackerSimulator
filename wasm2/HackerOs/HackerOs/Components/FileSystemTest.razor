@* Simple FileSystemTest component placeholder *@
<div class="filesystem-test">
    <h3>HackerOS File System Test</h3>
    <p>File System Test Component - Under Development</p>
    <p>This component is temporarily simplified while resolving compilation issues.</p>
    <button class="btn btn-primary" @onclick="TestMessage">Test Button</button>
    
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="message">@message</div>
    }
</div>

<style>
    .filesystem-test {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin: 20px 0;
        background-color: #f9f9f9;
    }
    
    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
    }
    
    .message {
        margin-top: 10px;
        padding: 10px;
        background-color: #d4edda;
        border-radius: 4px;
    }
</style>

@code {
    private string message = "";
    
    private void TestMessage()
    {
        message = "Test button clicked!";
    }
}
